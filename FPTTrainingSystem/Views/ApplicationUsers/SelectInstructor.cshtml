
@model IEnumerable<FPTTrainingSystem.Models.ApplicationUser>

@{
    ViewBag.Title = "Select Instructor";
}

<h2>Select Instructor</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Select", "CreateWithInstructor","Courses", new { instructor_id = item.Id, instructor_name = item.UserName },null)
            </td>
        </tr>
    }

</table>
